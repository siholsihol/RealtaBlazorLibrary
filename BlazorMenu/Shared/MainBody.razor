@inherits ComponentBase

<CascadingValue Value="this" Name="currentMainBody">
    <R_Tabs @ref="@_tabRef" 
            OnTabRemoved="@OnTabRemoved"
            OnTabRemoving="@OnTabRemoving" 
            OnActiveTabChanged="@OnActiveTabChanged" 
            OnActiveTabChanging="@OnActiveTabChanging">
        @foreach (var loTab in Tabs)
        {
            @if (loTab.Body != null)
            {
                <R_Tab Title="@loTab.Title"
                       Id="@loTab.Id.ToString()"
                       IsActive="@loTab.IsActive" 
                       HeaderEnabled="@loTab.HeaderEnabled">
                    <CascadingValue Value="@loTab" Name="currentTab" TValue="R_TabProgram" IsFixed>
                        @if (loTab.Body != null)
                            {
                                @loTab.Body
                            }
                    </CascadingValue>
                </R_Tab>
            }
        }
    </R_Tabs>
</CascadingValue>